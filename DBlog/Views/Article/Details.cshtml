@model DBlog.Models.Article

@{
    ViewData["Title"] = "Article Details";
}

<div class="container">
    <h1>@Model.Title</h1>
    <div class="d-flex gap-2 mb-3 justify-content-end ">
        <!-- Edit Butonu -->
        <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-warning">Edit</a>

        <!-- Delete Butonu -->
        <form method="post" asp-action="DeleteConfirmed" asp-route-id="@Model.Id"
            onsubmit="return confirm('Are you sure you want to delete this article?');">
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
    </div>

    <!-- Makale resmi -->
    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <div class="mb-3">
            <img src="@Model.ImageUrl" alt="@Model.Title" class="img-fluid rounded" />
        </div>
    }

    <p>@Model.Content</p>

    <!-- Makalenin yayÄ±m tarihi -->
    <p><strong>Published on:</strong> @Model.PublishedDate.ToString("MMMM dd, yyyy")</p>

    <h3>Comments</h3>

    <!-- Yorum ekleme formu -->
    <form method="post" asp-action="AddComment">
        <input type="hidden" name="articleId" value="@Model.Id" />
        <div class="mb-3">
            <textarea name="content" class="form-control" rows="3" placeholder="Add a comment..."></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Add Comment</button>
    </form>

    <!-- Yorumlar -->
    @if (Model.Comments != null && Model.Comments.Any())
    {
        foreach (var comment in Model.Comments.OrderByDescending(c => c.CommentDate))
        {
            <div class="mt-3 border p-3 rounded">
                <p><strong>@comment.Content</strong> - <small>@comment.CommentDate.ToString("g")</small></p>
            </div>
        }
    }
    else
    {
        <p>No comments yet. Be the first to comment!</p>
    }
</div>
