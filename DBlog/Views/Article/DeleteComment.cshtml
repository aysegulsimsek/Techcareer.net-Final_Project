@model DBlog.Entity.Comment

@{
    ViewData["Title"] = "Delete Comment";
}

<h2>Delete Comment</h2>

<h3>Are you sure you want to delete this comment?</h3>
<div>
    <h4>Comment</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Content
        </dt>
        <dd class="col-sm-10">
            @Model.Content
        </dd>
        <dt class="col-sm-2">
            Article Title
        </dt>
        <dd class="col-sm-10">
            @Model.Article?.Title
        </dd>
        <dt class="col-sm-2">
            Comment Date
        </dt>
        <dd class="col-sm-10">
            @Model.CommentDate.ToString("g")
        </dd>
    </dl>
</div>

<form asp-action="DeleteComment">
    <input type="hidden" asp-for="CommentId" />
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Comments" class="btn btn-secondary">Cancel</a>
    </div>
</form>
