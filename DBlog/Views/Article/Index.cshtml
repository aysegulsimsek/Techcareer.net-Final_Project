@model IEnumerable<DBlog.Models.Article>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - My Blog</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .card {
            display: flex;
            flex-direction: row;
            /* Resmi ve içeriği yan yana gösterir */
            border: 1px solid #ddd;
            border-radius: 0.5rem;
            overflow: hidden;
            margin-bottom: 1rem;
        }

        .card-img-top {
            width: 150px;
            /* Resim genişliği */
            height: 100%;
            /* Resim yüksekliği */
            object-fit: cover;
            /* Resmi kapsayıcıya sığdırır */
        }

        .card-body {
            flex: 1;
            /* İçerik alanının tüm genişliği kaplamasını sağlar */
            padding: 15px;
        }

        .card-title {
            font-size: 1.25rem;
            margin-bottom: 0.5rem;
        }

        .card-text {
            margin-bottom: 1rem;
        }

        .btn-gold {
            background-color: gold;
            border-color: gold;
            color: black;
        }

        .btn-gold:hover {
            background-color: rgb(229, 206, 148);
            border-color: rgb(209, 192, 150);
            color: rgb(53, 49, 49);
        }

        .card-shadow-yellow {
            box-shadow: 0 4px 8px rgba(255, 215, 0, 0.5);
            /* Sarı gölge */
        }
    </style>
</head>

<body>
    <div class="container mt-4">
        <div class="d-flex justify-between align-items-center">
            <h1 class="text-center mx-auto">All Articles</h1>
            <a class="btn btn-primary" asp-action="Create" asp-controller="Article">Makale Oluştur</a>
        </div>



        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["SuccessMessage"]
            </div>
        }

        <div class="row">
            @foreach (var article in Model)
            {
                <div class="col-md-4">
                    <div class="card card-shadow-yellow">
                        <div class="card mt-2">
                            @if (!string.IsNullOrEmpty(article.ImageFile))
                            {
                                <img src="@article.ImageFile" class="card-img-top" alt="@article.Title">
                            }
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">@article.Title</h5>
                            <p class="card-text">
                                @Html.Raw(GetShortContent(article.Content))
                            </p>
                            <a href="@Url.Action("Details", "Article", new { id = article.Id })" class="btn btn-gold">Read
                                More</a>
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>

@functions {
    private string GetShortContent(string? content, int maxLength = 150)
    {
        if (string.IsNullOrEmpty(content))
        {
            return string.Empty;
        }

        if (content.Length <= maxLength)
        {
            return content;
        }

        return content.Substring(0, maxLength) + "...";
    }
}
