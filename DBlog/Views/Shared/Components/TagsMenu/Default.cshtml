@model List<Tag>

<div class="card mt-4 border bg-light">
    <div class="card-header py-0 bg-light">
        <h5 class="card-title">Tags</h5>
    </div>
    <div class="card-body">
        <ul class="list-inline d-flex flex-wrap gap-2">
            @foreach (var tag in Model)
            {
                <li class="list-inline-item">
                    <a href="/article/tag/@tag.Url" class="btn btn-outline-secondary btn-sm">@tag.Text</a>
                </li>
            }
        </ul>
    </div>
</div>