<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <title>@ViewData["Title"] - My Blog</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/menu_styles.css">



    <style>
        .navbar-custom.navbar-brand,
        .navbar-custom.nav-link {
            color: #209cff;
            transition: color.3s, transform.3s;
        }

        .navbar-custom.navbar-brand:hover,
        .navbar-custom.nav-link:hover {
            color: #ffffff;
            transform: translateY(5px);
        }

        body {
            padding: 0;
            margin: 0;
        }

        .container {
            padding-top: 20px;
        }

        .footer {
            background-color: #343a40;
            color: #ffffff;
        }
    </style>
    @RenderSection("Styles", required: false)
</head>

<body>
    <div class="navigation">
        <nav class="navbar navbar-expand-lg navbar-custom">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="d-flex navbarnav" id="navbarNav">
                <ul class="user-select-none">

                    @if (!User.IsInRole("admin"))
                    {

                        <li class="">
                            <span class="icon align-items-center">
                                <ion-icon name="person-outline"></ion-icon>
                            </span>
                            <a class="nav_link pb-2" asp-controller="Article" asp-action="MyBlog">My Blog</a>
                        </li>
                    }
                    <li class="active">
                        <span class="icon  align-items-center">
                            <ion-icon name="home-outline"></ion-icon>
                            <a class="nav_link pb-2" asp-controller="Article" asp-action="Home">Home</a>
                        </span>

                    </li>
                    <li class="">
                        <span class="icon align-items-center">
                            <ion-icon name="eyedrop-outline"></ion-icon>
                        </span>
                        <a class="nav_link pb-2" asp-controller="Article" asp-action="Index">Articles</a>

                    </li>
                    <li class="">
                        <span class="icon align-items-center">
                            <ion-icon name="call-outline"></ion-icon>
                        </span>
                        <a class="nav_link pb-2" asp-controller="Article" asp-action="Index">Contact</a>
                    </li>
                    @if (User.IsInRole("admin"))
                    {
                        <li class="">
                            <span class="icon align-items-center">
                                <ion-icon name="podium-outline"></ion-icon>
                            </span>
                            <a class="nav_link" asp-controller="Article" asp-action="GetComments">Comments</a>
                        </li>
                    }
                    <div class="indicator"><span></span></div>
                </ul>

            </div>

        </nav>
        <ul class="navbar-nav ms-auto d-flex">
            @if (User.Identity!.IsAuthenticated)
            {
                <li class="nav-item">
                    <a asp-controller="Users" asp-action="Profile" class="navlink align-items-center gap-1">
                        <span class="material-symbols-outlined">account_circle</span>
                        @User.Identity.Name
                    </a>
                </li>
                <li class="nav-item">
                    <a class="navlink align-items-center gap-1 text-decoration-none" asp-controller="Users"
                        asp-action="Logout">
                        <span class="material-symbols-outlined">logout</span>
                        <span>Logout</span>
                    </a>
                </li>


            }
            else
            {
                <li class="nav-item">
                    <a asp-controller="Users" asp-action="Login" class="nav-link">Login</a>
                </li>
            }

        </ul>
    </div>

    <div class="container">
        @RenderBody()
    </div>


    <script>
        let list = document.querySelectorAll('.navigation li');
        function activeLink() {
            list.forEach((item) =>
                item.classList.remove('active'));
            this.classList.add('active')
        }
        list.forEach((item) =>
            item.addEventListener('click', activeLink))
    </script>
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/script.js"></script>
    @RenderSection("Scripts", required: false)

</body>

</html>
