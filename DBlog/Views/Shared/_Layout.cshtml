<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - My Blog</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .navbar-custom {
            background-color: #343a40;

        }


        .navbar-custom .navbar-brand,
        .navbar-custom .nav-link {
            color: #ffffff;
            transition: color .3s, transform .3s;
        }

        .navbar-custom .navbar-brand:hover,
        .navbar-custom .nav-link:hover {
            color: #ffffff;
            transform: translateY(5px);
        }

        .container {
            padding-top: 20px;

        }

        body {
            padding: 0;
            margin: 0;
        }
    </style>
    @RenderSection("Styles", required: false)
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-custom">
        <a class="navbar-brand" href="/">My Blog</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Article" asp-action="Index">Articles</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Article" asp-action="Comments">Comments</a>
                </li>
            </ul>
        </div>
        <div class=""><a class="nav-link" asp-controller="Article" asp-action="Index">Login</a>

        </div>
    </nav>

    <div class="">
        @RenderBody()
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>

</html>
