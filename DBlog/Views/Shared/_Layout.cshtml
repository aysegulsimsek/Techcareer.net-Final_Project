<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <title>@ViewData["Title"] - My Blog</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .navbar-custom {
            background-color: #343a40;
        }

        .navbar-custom .navbar-brand,
        .navbar-custom .nav-link {
            color: #ffffff;
            transition: color .3s, transform .3s;
        }

        .navbar-custom .navbar-brand:hover,
        .navbar-custom .nav-link:hover {
            color: #ffffff;
            transform: translateY(5px);
        }

        .container {
            padding-top: 20px;
        }

        body {
            padding: 0;
            margin: 0;
        }
    </style>
    @RenderSection("Styles", required: false)
</head>

<body>



    <nav class="navbar navbar-expand-lg navbar-custom">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse mr-auto" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Article" asp-action="Home">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Article" asp-action="Index">Articles</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Article" asp-action="Comments">Comments</a>
                </li>
            </ul>
        </div>
        <div class="navbar-nav ml-auto">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item d-flex align-items-center ml-auto">
                    @if (User.Identity?.IsAuthenticated == true)
                    {

                    <li class="nav-item d-flex align-items-center">
                        <a href="#" class="nav-link nav-link d-flex align-items-center gap-1 ">@User.Identity.Name
                            <span class="material-symbols-outlined">account_circle</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link d-flex align-items-center gap-1" asp-controller="Users" asp-action="Logout">
                            <span>Logout</span>
                            <span class="material-symbols-outlined">logout</span>
                        </a>
                    </li>
                    }
                    else
                    {
                    <li class="nav-item">
                        <a asp-controller="Users" asp-action="Login" class="nav-link">Login</a>
                    </li>
                    }</li>

            </ul>
        </div>


    </nav>
