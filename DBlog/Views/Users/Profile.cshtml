@model ProfileViewModel
@{
    Layout = "_Layout";
}
@section Styles {
    <style>
        html {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        .container {
            padding: 0;
            margin: 0;
        }

        body {
            background: linear-gradient(to bottom right, #f0f8ff, #ffffff);
            background-image: radial-gradient(circle, rgba(0, 0, 0, 0.1) 1px, transparent 1px),
                radial-gradient(circle, rgba(0, 0, 0, 0.1) 1px, transparent 1px);
            background-size: 20px 20px;
            background-position: 0 0, 10px 10px;
            width: 100%;
            text-align: center;
            min-height: 400px;
        }

        .container_bg {
            padding: 0;
            margin: 0;
            background-color: #fff;
        }

        .profile_section {
            display: flex;
            flex-direction: column;
        }

        footer.footer {
            background: linear-gradient(to bottom right, #e0f7fa, #ffffff);
            color: #666666;
            font-family: 'Open Sans', sans-serif;
            font-size: small;

        }
    </style>
}
<div class="container_bg">
    <div class="container">
        <h1>@Model.Name</h1>
        <div class="d-flex">
            <div class="profile_section">
                <div class="profile-info">
                    <div class="profile-image">
                        <div class="profile-image">
                            @if (!string.IsNullOrEmpty(Model.Image))
                            {
                                <img src="/img/@Model.Image" alt="@Model.UserName" style="width: 100px;" />
                            }
                            else
                            {
                                <img src="/img/user.png" alt="Default Profile Image" style="width: 100px;" />
                            }
                        </div>
                    </div>

                    <div class="profile-details">
                        <p><strong>Username:</strong> @Model.UserName</p>
                        <p><strong>Email:</strong> @Model.Email</p>
                        <p><strong>Name:</strong> @Model.Name</p>
                        <p><strong>Password:</strong> *******</p>
                    </div>
                </div>
            </div>
            <h2>@Model.Name's Comments</h2>
            <div class="user_comments">
                @if (Model.Comments != null && Model.Comments.Any())
                {
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Comment</th>
                                <th>Article Title</th>
                                <th>Comment Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var comment in Model.Comments)
                            {
                                <tr>
                                    <td>@comment.Content</td>
                                    <td>@comment.Article.Title</td>
                                    <td>@comment.CommentDate.ToString("g")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p>No comments found.</p>
                }
            </div>
        </div>
    </div>

</div>
<footer class="footer mt-4 py-4 w-100">
    <p class="mt-2 user-select-none">&copy; 2024 My Blog. All rights reserved.</p>
</footer>
